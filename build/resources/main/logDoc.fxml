<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LoginController">
   <children>
      <BorderPane prefHeight="400.0" prefWidth="600.0">
         <bottom>
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Login Button" />
                  <Separator opacity="0.0" orientation="VERTICAL" prefHeight="200.0" prefWidth="25.0" />
                  <Button fx:id='logBut' mnemonicParsing="false" onAction="#onLogin" text="Login" />
                  <Separator opacity="0.0" orientation="VERTICAL" prefHeight="200.0" prefWidth="50.0" />
               </children>
            </HBox>
         </bottom>
         <center>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label text="Username" />
                        <Separator opacity="0.0" orientation="VERTICAL" prefHeight="200.0" prefWidth="50.0" />
                        <TextField fx:id="unLogin" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label text="Password" />
                        <Separator opacity="0.0" orientation="VERTICAL" prefHeight="200.0" prefWidth="50.0" />
                        <PasswordField fx:id="pLogin" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </center>
         <top>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <Separator opacity="0.0" orientation="VERTICAL" prefHeight="200.0" prefWidth="100.0" />
                  <Label text="Welcome! Please enter your login info." />
               </children>
            </HBox>
         </top>
      </BorderPane>
   </children>
</AnchorPane>
